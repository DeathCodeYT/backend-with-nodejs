<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SSR - By DeathCode</title>
</head>
<body>
    <h1>Testing SSR </h1>
    <form method="post" action="/api/v1/" >
        <input type="text" id="name" name="url" placeholder="Enter URL">
        <button type="submmit" id="btn">Create Short URL</button>
    </form>
    <% if (typeof newUrl !=='undefined' && newUrl) { %>
        <h3>Newly Created URL</h3>
        <%= newUrl.shortId %> - <%= newUrl.shortedUrl %>
    <% } %>
    <% if (typeof urls !=='undefined' && urls && urls.length>0) { %>
        <h3>All URLs</h3>
        <ul>

            <% urls.forEach(url => { %>
                <li>
                    <%= url.shortId %>(<%=url.visited%>) - <a href=<%= url.shortedUrl%>><%= url.shortedUrl%></a>
                </li>
            <% }); %>
        </ul>
    <% } %>

</body>
</html>